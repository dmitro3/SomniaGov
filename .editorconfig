# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript, TypeScript, JSX, TSX
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Solidity files
[*.sol]
indent_size = 4

# HTML files
[*.html]
indent_size = 2

# CSS, SCSS files
[*.{css,scss}]
indent_size = 2

# Package.json
[package.json]
indent_size = 2

# Hardhat config
[hardhat.config.{js,ts}]
indent_size = 2

# Environment files
[.env*]
insert_final_newline = false